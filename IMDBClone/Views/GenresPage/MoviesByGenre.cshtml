@model IEnumerable<IMDBClone.Models.Movie>

@{
    ViewData["Title"] = "Movies by Genre";
}

<h2 class="text-light">@ViewBag.GenreName Movies</h2>

<div class="row mt-4">
    @foreach (var movie in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card shadow rounded-3 h-100">
                <img src="@movie.PosterUrl" class="card-img-top" style="height: 300px; object-fit: cover;" alt="@movie.Title" />
                <div class="card-body">
                    <h5 class="card-title">@movie.Title (@movie.ReleaseYear)</h5>
                    <p class="card-text">@movie.Description</p>
                    <a asp-controller="MoviesPage" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-outline-primary btn-sm">Details</a>
                </div>
            </div>
        </div>
    }
</div>
