@model IMDBClone.Models.Movie
@{
    ViewData["Title"] = "Delete Movie";
}

<div class="container mt-5">
    <h2 class="text-danger">Are you sure you want to delete this movie?</h2>
    <div class="card mt-4 p-3 shadow-sm">
        <dl class="row">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Director</dt>
            <dd class="col-sm-9">@Model.Director</dd>

            <dt class="col-sm-3">Release Year</dt>
            <dd class="col-sm-9">@Model.ReleaseYear</dd>

            <dt class="col-sm-3">Genre</dt>
            <dd class="col-sm-9">@Model.Genre?.Name</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>
