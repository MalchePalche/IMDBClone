@model IMDBClone.Models.Movie

<div class="container mt-5 text-white">
    <h2 class="mb-4">🎞️ Movie Details</h2>

    <div class="card bg-dark text-white shadow-lg">
        <div class="card-body">
            <h4 class="card-title">@Model.Title</h4>
            <h6 class="card-subtitle mb-3 text-muted">Directed by: @Model.Director</h6>

            <p><strong>Genre:</strong> @Model.Genre?.Name</p>
            <p><strong>Release Year:</strong> @Model.ReleaseYear</p>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Actors:</strong> @Model.Actors</p>
            <p><strong>Poster URL:</strong> <a href="@Model.PosterUrl" class="text-info">@Model.PosterUrl</a></p>
            <p><strong>Trailer:</strong> <a href="@Model.TrailerUrl" target="_blank" class="text-info">Watch Trailer</a></p>

            <a asp-action="Index" class="btn btn-secondary mt-3">⬅ Back to List</a>
        </div>
    </div>
</div>
