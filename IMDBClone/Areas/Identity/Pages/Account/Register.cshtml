@page
@model RegisterModel

<link rel="stylesheet" href="~/css/auth.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="auth-form p-4 rounded shadow animate__fadeIn" style="background-color: #1e293b; color: white; max-width: 400px; width: 100%;">
        <h2 class="mb-4 text-center">Create a new account</h2>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3 text-dark">
                <input asp-for="Input.Email" class="form-control" id="floatingEmail" placeholder="Email address" autocomplete="username" aria-required="true" />
                <label for="floatingEmail">Email address</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 text-dark">
                <input asp-for="Input.Password" class="form-control" id="floatingPassword" placeholder="Password" autocomplete="new-password" aria-required="true" />
                <label for="floatingPassword">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 text-dark">
                <input asp-for="Input.ConfirmPassword" class="form-control" id="floatingConfirmPassword" placeholder="Confirm Password" autocomplete="new-password" aria-required="true" />
                <label for="floatingConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Register</button>

            <p class="mt-3 text-center">
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-warning">Already have an account? Log in</a>
            </p>
        </form>
    </div>
</div>

<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
    }

    .full-height {
        min-height: 100vh;
    }

    .animate__fadeIn {
        animation: fadeIn 1s ease-in;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(-20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .btn-primary:hover {
        filter: brightness(1.2);
        transition: filter 0.3s ease;
    }

    .form-control:focus {
        border-color: #4dabf7; /* Light blue border */
        box-shadow: 0 0 10px #4dabf7; /* Light blue glowing effect */
        outline: none;
    }

</style>
