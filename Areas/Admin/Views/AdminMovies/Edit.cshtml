@model IMDBClone.Models.Movie

@{
    ViewData["Title"] = "Edit Movie";
}

<h2>Edit Movie</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="ReleaseYear"></label>
        <input asp-for="ReleaseYear" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Director"></label>
        <input asp-for="Director" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="GenreId">Genre</label>
        <select asp-for="GenreId" class="form-control" asp-items="ViewBag.Genres"></select>
    </div>

    <div class="form-group">
        <label asp-for="PosterUrl"></label>
        <input asp-for="PosterUrl" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Actors"></label>
        <input asp-for="Actors" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="TrailerUrl"></label>
        <input asp-for="TrailerUrl" class="form-control" />
    </div>

    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-success">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
