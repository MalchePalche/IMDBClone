@model IEnumerable<IMDBClone.Models.Movie>

<div class="container mt-4">
    <h2 class="text-white mb-4">🎬 Admin - Movies List</h2>

    <a asp-action="Create" class="btn btn-success mb-3">+ Add New Movie</a>

    <table class="table table-striped table-dark table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th>Director</th>
                <th>Genre</th>
                <th>Release Year</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Title</td>
                    <td>@movie.Director</td>
                    <td>@movie.Genre?.Name</td>
                    <td>@movie.ReleaseYear</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-sm btn-info me-2">Details</a>
                        <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-sm btn-warning me-2">Edit</a>
                        <a asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
