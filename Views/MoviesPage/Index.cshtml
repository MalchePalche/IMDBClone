@model IEnumerable<IMDBClone.Models.Movie>
@{
    ViewData["Title"] = "Movies";
}

<h1>All Movies</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Year</th>
            <th>Director</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Genre?.Name</td>
                <td>@movie.ReleaseYear</td>
                <td>@movie.Director</td>
            </tr>
        }
    </tbody>
</table>
