@model IEnumerable<IMDBClone.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">🎥 Browse All Movies</h2>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var movie in Model)
        {
            <div class="col">
                <div class="card h-100 shadow rounded-3">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@movie.Title (@movie.ReleaseYear)</h5>
                        <h6 class="card-subtitle text-muted mb-2">Directed by: @movie.Director</h6>
                        <p class="card-text flex-grow-1">@movie.Description</p>
                        <a class="btn btn-primary mt-auto w-100" asp-action="Details" asp-route-id="@movie.Id">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
