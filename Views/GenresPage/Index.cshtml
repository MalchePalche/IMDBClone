@model IEnumerable<IMDBClone.Models.Genre>

@{
    ViewData["Title"] = "Genres";
}

<div class="container mt-5 fade-in">
    <h2 class="text-light mb-4">🎬 Browse by Genre</h2>
    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-5 g-4">
        @foreach (var genre in Model)
        {
            <div class="col">
                <a asp-action="MoviesByGenre" asp-route-id="@genre.Id" class="text-decoration-none">
                    <div class="card bg-dark text-white text-center shadow-sm genre-card h-100">
                        <div class="card-body d-flex align-items-center justify-content-center">
                            <h5 class="card-title m-0">@genre.Name</h5>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

<style>
    .genre-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 12px;
    }

    .genre-card:hover {
        transform: scale(1.05);
        box-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
        background: linear-gradient(145deg, #1f1c2c, #928dab);
    }
</style>
